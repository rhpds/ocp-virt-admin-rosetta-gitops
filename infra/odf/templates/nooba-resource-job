---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: nooba-resource-job
  namespace: default
  annotations:
    argocd.argoproj.io/sync-wave: "-4"
    argocd.argoproj.io/sync-options: SkipDryRunOnMissingResource=true
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: nooba-resource-job
  annotations:
    argocd.argoproj.io/sync-wave: "-4"
    argocd.argoproj.io/sync-options: SkipDryRunOnMissingResource=true
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: nooba-resource-job
  namespace: default
---
apiVersion: batch/v1
kind: Job
metadata:
  name: nooba-resource-job
  namespace: default
  annotations:
    argocd.argoproj.io/sync-wave: "-4"
    argocd.argoproj.io/sync-options: SkipDryRunOnMissingResource=true
spec:
  template:
    spec:
      restartPolicy: Never
      serviceAccountName: nooba-resource-job
      containers:
      - name: nooba-resource-job
        image: image-registry.openshift-image-registry.svc:5000/openshift/cli
        command:
        - /bin/sh
        - -c
        - |
          echo "######################"
          echo "# Patch the SC with lower nooba resources"
          echo "######################"
          oc patch -n openshift-storage \
          --type merge storagecluster ocs-external-storagecluster \
          --patch '{"spec": {"resources": {"noobaa-core": {"requests": {"cpu": "1","memory": "2Gi"}},"noobaa-db": {"requests": {"cpu": "1","memory": "2Gi"}},"noobaa-endpoint": {"requests": {"cpu": "1","memory": "2Gi"}}}}}'
